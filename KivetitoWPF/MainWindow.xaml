        <TabControl Grid.Column="4" HorizontalAlignment="Left" Height="422" VerticalAlignment="Top" Width="200">

            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <TabItem Header="TabItem">

                <ScrollViewer x:Name="ScrollViewer_OldalsoEszkoz"
                              Grid.Column="4"
                              Grid.IsSharedSizeScope="True">
                    <Grid x:Name="Grid_DalSzerkesztés"
                          HorizontalAlignment="Left"
                          Height="404"
                          MinHeight="422"
                          Margin="0,0,0,0"
                          VerticalAlignment="Top"
                          Width="Auto">
                        <TextBlock x:Name="Tblock_Szerkesztes"
                                   VerticalAlignment="Top"
                                   Margin="0,10,0,0"
                                   TextWrapping="NoWrap"
                                   Text="Szerkesztés"
                                   TextDecorations="Underline"
                                   TextAlignment="Center"
                                   FontSize="18"
                                   Height="Auto"
                                   MinWidth="183"/>

                        <TextBlock x:Name="Tblock_Szoveg"
                                   Margin="10,39,124,0"
                                   TextWrapping="NoWrap"
                                   Text="Szöveg"
                                   FontSize="14"
                                   Height="Auto"
                                   VerticalAlignment="Top"/>

                        <CheckBox x:Name="CheckBox_TeljeszSzovSzerk"
                                  Content="Teljes szöv. szerk."
                                  FontSize="12"
                                  Margin="64,43,3,0"
                                  VerticalAlignment="Top"
                                  Width="Auto"
                                  Height="Auto"/>

                        <Border x:Name="Border_Disz"
                                BorderBrush="Black"
                                BorderThickness="3"
                                Height="2"
                                Margin="0,63,0,0"
                                VerticalAlignment="Top"
                                MinWidth="183"/>

                        <RichTextBox x:Name="RichTextBox_DalSzoveg"
                                     Margin="0,70,0,0"
                                     VerticalScrollBarVisibility="Auto"
                                     Height="131"
                                     VerticalAlignment="Top"
                                     MinWidth="183">
                            <FlowDocument>
                                <Paragraph>
                                    <Run Text="RichTextBox"/>
                                </Paragraph>
                            </FlowDocument>
                        </RichTextBox>

                    </Grid>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>



    </Grid>
</Window>